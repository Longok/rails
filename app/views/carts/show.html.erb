
<% if @cart.bills.count == 0 %>
    <h1>Ban chua co san pham nao, <%= link_to "mua ngay!", products_path %></h1>
<% else %>
    <h1>Your Cart (<%= @cart.total_quantity %> item)</h1>

    <table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Total</th>
        </tr>
    </thead>
    <tbody>
        <% @cart.bills.each do |bill| %>
            <tr>
                <td>
                    <%= image_tag bill.product.display_image if bill.product.image.attached? %>
                <%= bill.product.name %>
                </td>
                <td><%= link_to "Delete item", bill_path(bill), method: :delete, data: {confirm: "Are you sure?"} %></td>
                <td>
                    <strong><%= link_to "-", bill_reduce_path(:id =>bill), method: :post %></strong>
                    <%= bill.quantity %>
                    <strong><%= link_to "+", bill_add_path(:id =>bill), method: :post %></strong>

                </td>
                <td><%= bill.product.price %></td>
                <td><%= bill.total_pirce %></td>
            </tr>
            
        <% end %>
        <tr> 
            <th><%= link_to "Delete cart", cart_path(@current_cart), method: :delete, data: {confirm: "Are you sure?"} %></th>
            <th class="text-right" colspan="3">Subtotal:</th>
            <td><%= @cart.total_bill %></td>
        </tr>
    </tbody>

    </table>
    <%= link_to "Check out" %>
<% end %>