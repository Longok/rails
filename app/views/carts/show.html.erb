<h1>Your Cart</h1>

    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Action</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total</th>
            </tr>
        </thead>
        <tbody>
            <% @cart.bills.each do |bill| %>
                <tr>
                    <td><%= bill.product.name %></td>
                    <td><%= link_to "Delete item", bill_path(bill), method: :delete, data: {confirm: "Are you sure?"} %></td>
                    <td><%= bill.quantity %></td>
                    <td><%= bill.product.price %></td>
                    <td><%= bill.total_pirce %></td>
                </tr>
                
            <% end %>
            <tr>
                <th class="text-right" colspan="4">Subtotal:</th>
                <td><%= @cart.total_bill %></td>
            </tr>
        </tbody>

    </table>

</p> <%= link_to "Delete cart", cart_path(@current_cart), method: :delete, data: {confirm: "Are you sure?"} %>

