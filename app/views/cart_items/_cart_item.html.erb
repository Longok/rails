<tr>
    <td>
        <%= image_tag cart_item.product.display_image if cart_item.product.image.attached? %>
    <%= cart_item.product.name %>
    </td>
    <td><%= link_to "Delete item", cart_item_path(cart_item), method: :delete, data: {confirm: "Are you sure?"} %></td>
    <td>
        <strong><%= link_to "-", cart_item_reduce_path(cart_item), method: :post %></strong>
        <%= cart_item.quantity %>
        <strong><%= link_to "+", cart_item_add_path(cart_item), method: :post %></strong>

    </td>
    <td><%= cart_item.product.price %></td>
    <td><%= cart_item.total_pirce %></td>
</tr>
