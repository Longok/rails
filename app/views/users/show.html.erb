
<% provide :title, @user.name %> 
    <div class="row">
        <aside class="col-md-4">
            <section class="user_info">
                <h1>
                    <%= gravatar_for @user %>
                    <%= @user.name %>
                </h1>
                <%= @user.email %>
                <br>
                <%= @user.created_at.strftime("%B %d, %Y")%>
                <br>
                <%= link_to 'Edit', edit_user_path %>
                <%= link_to 'Delete', user_path, method: :delete, data: {confirm: "Are you sure?"} %>
            </section>
        </aside>
      

    </div>