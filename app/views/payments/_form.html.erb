    <%= form_for([@bill, @payment]) do |f| %>

    <%= render "shared/error_messages", object: @payment %>

    <%= f.hidden_field :bill_id , :value => @payment.id %>

    <%= f.label :address %> 
    <%= f.text_field :address, class: "form-control" %>

    <%= f.label :phone_number %> 
    <%= f.text_field :phone_number, class: "form-control" %>

    <%= f.label :payment_type %>
    <%= f.select :payment_type, Payment::PAYMENT_TYPE, class: "form-control" %>


    <%= f.submit "Check out", class: "btn btn-primary" %>


<% end %>