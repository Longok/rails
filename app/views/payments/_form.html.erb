<%= form_for(@payment, url: cart_payments_path) do |f| %>

    <%= render "shared/error_messages", object: @payment %>

    <%= f.hidden_field :cart_id , :value => @payment.cart_id %>
    <%= f.label :address %> 

    <%= f.text_field :address, class: "form-control" %>
    <%= f.label :phone_number %> 

    <%= f.text_field :phone_number, class: "form-control" %>
    <%= f.label :payment_type %>

    <%= f.select :payment_type, Payment::PAYMENT_TYPE, class: "form-control" %>

    <%= f.submit "Check out", class: "btn btn-primary" %>

<% end %>