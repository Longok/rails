<% provide :title, @micropost.content %> 
<div class="microposts">
    <span class="content">
        <h1><%= @micropost.content %></h1>
        <%= image_tag @micropost.image if @micropost.image.attached? %>
    </span>
        <span class="timestamp">
        Posted <%= time_ago_in_words @micropost.created_at %> ago. 
    </span>
</div>