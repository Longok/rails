<% provide :title, @micropost.content %> 
<div class="microposts">
    <span class="content">
        <h1><%= @micropost.content %></h1>

        <% if @micropost.images.attached? %>
            <% @micropost.display_images.each do |image| %>
                <%= image_tag image %>
            <% end %>
        <% end %>

    </span>
        <span class="timestamp">
        Posted <%= time_ago_in_words @micropost.created_at %> ago. 
    </span>
</div>